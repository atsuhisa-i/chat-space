.main-chat__message-list
  .main-chat__message-list__name
    = message.user.name
  .main-chat__message-list__date
    = message.create_at.strftime("%Y年%m月%d日 %H時%M分")
.main-chat__message__text
    - if message.content.present?
      %p.main-chat__message__text__content
        = message.content
    = image_tag message.image.url, class: 'main-chat__message__text__image' if message.image.present?