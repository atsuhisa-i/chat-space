.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__name
        = current_user.name
      %ul.side-bar__header__box__icons
        %li.side-bar__header__box__icons__make-group
          = link_to new_group_path do
            = icon("fa", "edit")
        %li.side-bar__header__box__icons__edit-user
          = link_to edit_user_path(current_user) do
            = icon("fa", "cog")
  .side-bar__group
    - current_user.groups.each do |group|
      %ul.side-bar__group__list
        = link_to "#" do
          %li.side-bar__group__list__name
            = group.name
          %li.side-bar__group__list__message
            まだメッセージがありません